<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "src.main.java.org.poib_sobi.Postman" table = "userinfo">

        <!--        <meta attribute = "class-description">
                    This class contains the employee detail.
                </meta>-->

        <id name = "userinfoid" type = "int" column = "userinfoid">
            <generator class="native"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "systemname" column = "systemname" type = "string"/>
        <property name = "userinfoid" column = "userinfoid" type = "int"/>
        <property name = "externalsystemid" column = "externalsystemid" type = "string"/>

    </class>
</hibernate-mapping>